generator client {
  provider = "prisma-client-js"
  output   = "../src/database/prismaclient"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_SQLITE")
}

model Auth {
  id           Int      @id @default(1)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("auth")
}