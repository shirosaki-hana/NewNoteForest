{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoteForest",
  "version": "1.0.0",
  "identifier": "com.noteforest.desktop",
  "build": {
    "beforeDevCommand": "pnpm --filter frontend run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter frontend run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "NoteForest",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}

